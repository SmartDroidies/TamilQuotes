<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smart.droidies.tamil.quotes" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SpinnerDialog">
        <param name="android-package" value="hu.dpal.phonegap.plugins.SpinnerDialog" />
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="Clipboard">
        <param name="android-package" value="com.verso.cordova.clipboard.Clipboard" />
    </feature>
    <feature name="AdmobPlugin">
        <param name="android-package" value="com.admob.cordova.plugin.AdmobAdPlugin" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/android/tamilquotes_mdpi.png" />
    <icon density="hdpi" src="res/android/tamilquotes_hdpi.png" />
    <icon density="xhdpi" src="res/android/tamilquotes_xhdpi.png" />
    <icon density="xxhdpi" src="res/android/tamilquotes_xxhdpi.png" />
    <icon density="xxxhdpi" src="res/android/tamilquotes_xxxhdpi.png" />
    <name>Tamil Status &amp; Quotes</name>
    <description>
        A sample Apache Cordova application for Tamil Quotes
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
